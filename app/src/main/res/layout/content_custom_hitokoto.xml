<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mystery0.hitokoto.activity.LocalHitokotoActivity"
    tools:showIn="@layout/activity_custom_hitokoto">

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_show_margin"
        android:gravity="center"
        android:text="@string/hint_show_hitokoto"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint"
        android:layout_marginTop="@dimen/item_show_margin"/>

    <TextView
        android:id="@+id/null_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:gravity="center"
        android:text="@string/hint_null_data"
        android:visibility="gone"/>

</RelativeLayout>
