<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_test_source_height">

    <TextView
        android:id="@+id/source_name"
        android:layout_width="@dimen/item_test_source_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_view_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/source_enable"
        android:layout_width="@dimen/item_test_source_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/text_view_border"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/source_name"
        android:layout_toStartOf="@id/source_enable">

        <TextView
            android:id="@+id/source_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_view_border"
            android:gravity="center"/>

        <TextView
            android:id="@+id/source_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_view_border"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
