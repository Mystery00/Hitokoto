<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_data_source">
        <!--数据源设置-->
        <Preference
            android:key="@string/key_refresh_now"
            android:title="@string/text_refresh_now"/>

        <Preference
            android:key="@string/key_show_current"
            android:title="@string/text_show_current"/>

        <Preference
            android:key="@string/key_test_source"
            android:title="@string/text_test_source"/>

        <MultiSelectListPreference
            android:entries="@array/list_source"
            android:entryValues="@array/list_source"
            android:key="@string/key_choose_source"
            android:title="@string/text_choose_source"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_custom">

        <Preference
            android:key="@string/key_local_hitokoto"
            android:title="@string/title_custom_hitokoto"/>

        <Preference
            android:key="@string/key_custom_source"
            android:title="@string/title_custom_source"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_widget_settings">
        <!--小部件设置-->
        <CheckBoxPreference
            android:key="@string/key_auto_refresh"
            android:title="@string/text_auto_refresh"/>

        <CheckBoxPreference
            android:key="@string/key_click_to_refresh"
            android:title="@string/text_click_to_refresh"/>

        <EditTextPreference
            android:defaultValue="20"
            android:hint="@string/text_text_size"
            android:inputType="number"
            android:key="@string/key_set_text_padding"
            android:maxLines="1"
            android:title="@string/text_text_padding"/>

        <EditTextPreference
            android:defaultValue="5"
            android:hint="@string/hint_refresh_time"
            android:inputType="number"
            android:key="@string/key_set_refresh_time"
            android:maxLines="1"
            android:title="@string/text_refresh_time"/>

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:defaultValue="-1"
            android:key="@string/key_set_text_color"
            android:title="@string/text_text_color"/>

        <ListPreference
            android:entries="@array/list_aligned"
            android:entryValues="@array/list_aligned"
            android:key="@string/key_text_aligned"
            android:title="@string/text_text_aligned"/>

        <EditTextPreference
            android:defaultValue="16"
            android:hint="@string/hint_text_size"
            android:inputType="number"
            android:key="@string/key_text_size"
            android:maxLines="1"
            android:title="@string/text_text_size"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_advance">
        <!--特殊设置-->
        <CheckBoxPreference
            android:key="@string/key_not_show_source"
            android:title="@string/text_not_show_source"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_info">
        <!--关于-->
        <Preference
            android:title="@string/text_open_resource">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Mystery00/Hitokoto"/>
        </Preference>

        <Preference
            android:key="@string/key_about"
            android:title="@string/text_about"/>

        <Preference
            android:key="@string/key_developer_options"
            android:title="@string/title_developer_options"/>

    </PreferenceCategory>

</PreferenceScreen>
